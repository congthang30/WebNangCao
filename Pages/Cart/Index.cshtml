@page
@model NewWeb.Pages.Cart.IndexModel
@{
    ViewData["Title"] = "Giỏ hàng của bạn";
}

<link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />

<div class="cart-container">
    <div class="row">
        <div class="col-12">
            <h2 class="page-title">
                <i class="bi bi-cart3 me-2"></i>Giỏ hàng của bạn
                @if (Model.TotalItems > 0)
                {
                    <span class="badge bg-primary ms-2">@Model.TotalItems sản phẩm</span>
                }
            </h2>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.CartItems.Any())
    {
        <div class="empty-cart">
            <div class="empty-cart-icon">
                <i class="bi bi-cart-x"></i>
            </div>
            <h3>Giỏ hàng của bạn đang trống</h3>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục mua sắm</p>
            <a asp-page="/Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="cart-items-section">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="mb-0">Sản phẩm trong giỏ</h5>
                        <form method="post" asp-page-handler="Clear" onsubmit="return confirm('Bạn có chắc muốn xóa tất cả sản phẩm?');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash me-1"></i>Xóa tất cả
                            </button>
                        </form>
                    </div>

                    @foreach (var item in Model.CartItems)
                    {
                        <div class="cart-item">
                            <div class="row align-items-center">
                                <!-- Product Image -->
                                <div class="col-md-2 col-3">
                                    <a asp-page="/Products/Detail" asp-route-id="@item.ProductId">
                                        @if (!string.IsNullOrEmpty(item.Product?.ImagePr))
                                        {
                                            <img src="@item.Product.ImagePr" alt="@item.Product.ProductName" 
                                                 class="cart-item-image" onerror="this.src='/images/no-image.svg';">
                                        }
                                        else
                                        {
                                            <img src="/images/no-image.svg" alt="No Image" class="cart-item-image">
                                        }
                                    </a>
                                </div>

                                <!-- Product Info -->
                                <div class="col-md-4 col-9">
                                    <a asp-page="/Products/Detail" asp-route-id="@item.ProductId" class="cart-item-name">
                                        @item.Product?.ProductName
                                    </a>
                                    <div class="cart-item-meta">
                                        <span class="badge bg-secondary">@item.Product?.Cate?.CategoryName</span>
                                        <span class="badge bg-info">@item.Product?.Brand?.NameBrand</span>
                                    </div>
                                    @if (item.Product?.Quantity <= 10)
                                    {
                                        <div class="stock-warning">
                                            <i class="bi bi-exclamation-triangle me-1"></i>
                                            Chỉ còn @item.Product.Quantity sản phẩm
                                        </div>
                                    }
                                </div>

                                <!-- Price -->
                                <div class="col-md-2 col-4 text-center">
                                    <div class="cart-item-price">
                                        @item.UnitPrice?.ToString("N0") ₫
                                    </div>
                                </div>

                                <!-- Quantity -->
                                <div class="col-md-2 col-4">
                                    <div class="quantity-control">
                                        <form method="post" asp-page-handler="Update" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="hidden" name="quantity" value="@((item.Quantity ?? 1) - 1)" />
                                            <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                        </form>
                                        
                                        <input type="number" class="quantity-input" value="@item.Quantity" 
                                               min="1" max="@item.Product?.Quantity"
                                               onchange="updateCartItem(@item.ProductId, this.value)" />
                                        
                                        <form method="post" asp-page-handler="Update" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <input type="hidden" name="quantity" value="@((item.Quantity ?? 1) + 1)" />
                                            <button type="submit" class="btn btn-sm btn-outline-secondary"
                                                    @(item.Quantity >= item.Product?.Quantity ? "disabled" : "")>
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>

                                <!-- Subtotal & Remove -->
                                <div class="col-md-2 col-4 text-end">
                                    <div class="cart-item-subtotal">
                                        @(((item.Quantity ?? 0) * (item.UnitPrice ?? 0)).ToString("N0")) ₫
                                    </div>
                                    <form method="post" asp-page-handler="Remove" class="mt-2">
                                        <input type="hidden" name="productId" value="@item.ProductId" />
                                        <button type="submit" class="btn btn-sm btn-link text-danger p-0">
                                            <i class="bi bi-trash me-1"></i>Xóa
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <!-- Continue Shopping -->
                <div class="mt-3">
                    <a asp-page="/Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="order-summary">
                    <h5 class="mb-4">
                        <i class="bi bi-receipt me-2"></i>Tổng đơn hàng
                    </h5>

                    <div class="summary-row">
                        <span>Tạm tính (@Model.TotalItems sản phẩm)</span>
                        <span class="fw-bold">@Model.TotalAmount.ToString("N0") ₫</span>
                    </div>

                    <div class="summary-row">
                        <span>Phí vận chuyển</span>
                        <span class="text-success">Miễn phí</span>
                    </div>

                    <hr>

                    <div class="summary-row summary-total">
                        <span>Tổng cộng</span>
                        <span class="total-price">@Model.TotalAmount.ToString("N0") ₫</span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <a asp-page="/Checkout/Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-credit-card me-2"></i>Tiến hành thanh toán
                        </a>
                    </div>

                    <!-- Promo Code -->
                    <div class="promo-code mt-3">
                        <h6 class="mb-2">
                            <i class="bi bi-tag me-1"></i>Mã giảm giá
                        </h6>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Nhập mã giảm giá">
                            <button class="btn btn-outline-secondary" type="button">
                                Áp dụng
                            </button>
                        </div>
                    </div>

                    <!-- Security Info -->
                    <div class="security-info mt-4">
                        <div class="d-flex align-items-center mb-2">
                            <i class="bi bi-shield-check text-success me-2 fs-5"></i>
                            <small>Thanh toán an toàn & bảo mật</small>
                        </div>
                        <div class="d-flex align-items-center">
                            <i class="bi bi-truck text-primary me-2 fs-5"></i>
                            <small>Giao hàng nhanh chóng</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function updateCartItem(productId, quantity) {
            const form = document.createElement('form');
            form.method = 'post';
            form.action = '?handler=Update';

            const productIdInput = document.createElement('input');
            productIdInput.type = 'hidden';
            productIdInput.name = 'productId';
            productIdInput.value = productId;
            form.appendChild(productIdInput);

            const quantityInput = document.createElement('input');
            quantityInput.type = 'hidden';
            quantityInput.name = 'quantity';
            quantityInput.value = quantity;
            form.appendChild(quantityInput);

            const tokenInput = document.createElement('input');
            tokenInput.type = 'hidden';
            tokenInput.name = '__RequestVerificationToken';
            tokenInput.value = document.querySelector('input[name="__RequestVerificationToken"]').value;
            form.appendChild(tokenInput);

            document.body.appendChild(form);
            form.submit();
        }

        // Update cart count in header
        document.addEventListener('DOMContentLoaded', function() {
            const totalItems = @Model.TotalItems;
            localStorage.setItem('cartCount', totalItems);
            if (window.updateCartCount) {
                window.updateCartCount();
            }
        });
    </script>
}

