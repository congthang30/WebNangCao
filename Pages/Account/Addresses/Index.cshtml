@page
@model NewWeb.Pages.Account.Addresses.IndexModel
@{
    ViewData["Title"] = "Danh sách địa chỉ";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-geo-alt me-2"></i>Danh sách địa chỉ</h2>
            <p class="text-muted">Quản lý địa chỉ giao hàng của bạn</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-page="/Account/Addresses/Add" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Thêm địa chỉ mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Addresses.Any())
    {
        <div class="row g-3">
            @foreach (var address in Model.Addresses)
            {
                <div class="col-md-6">
                    <div class="card address-card h-100">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0">
                                    <i class="bi bi-house-door me-2"></i>Địa chỉ giao hàng
                                </h5>
                                <div class="btn-group">
                                    <a asp-page="/Account/Addresses/Update" asp-route-id="@address.AddressId" 
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@address.AddressId" 
                                          onsubmit="return confirm('Bạn có chắc muốn xóa địa chỉ này?');" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                            
                            <p class="card-text mb-2">
                                <i class="bi bi-signpost me-2"></i>
                                <strong>Địa chỉ:</strong> @address.Street, @address.Ward, @address.District, @address.City
                            </p>
                            <p class="card-text mb-2">
                                <i class="bi bi-telephone me-2"></i>
                                <strong>Số điện thoại:</strong> @address.Phone
                            </p>
                            <p class="card-text text-muted mb-0">
                                <small>
                                    <i class="bi bi-clock me-2"></i>
                                    Tạo lúc: @address.CreatedAt?.ToString("dd/MM/yyyy HH:mm")
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-geo-alt display-1 text-muted"></i>
            <h4 class="mt-3">Bạn chưa có địa chỉ nào</h4>
            <p class="text-muted">Thêm địa chỉ giao hàng để tiện cho việc mua sắm</p>
            <a asp-page="/Account/Addresses/Add" class="btn btn-primary mt-3">
                <i class="bi bi-plus-circle me-2"></i>Thêm địa chỉ mới
            </a>
        </div>
    }

    <div class="mt-4">
        <a asp-page="/Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i>Quay lại trang chủ
        </a>
    </div>
</div>

