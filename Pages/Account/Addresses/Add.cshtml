@page
@model NewWeb.Pages.Account.Addresses.AddModel
@{
    ViewData["Title"] = "Thêm địa chỉ mới";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <h2><i class="bi bi-plus-circle me-2"></i>Thêm địa chỉ mới</h2>
            <p class="text-muted">Thêm địa chỉ giao hàng của bạn</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post" class="account-form">
            <div class="mb-3">
                <label asp-for="City" class="form-label">
                    <i class="bi bi-geo-alt me-2"></i>Tỉnh/Thành phố *
                </label>
                <input asp-for="City" class="form-control" placeholder="Ví dụ: Hồ Chí Minh" required />
            </div>

            <div class="mb-3">
                <label asp-for="District" class="form-label">
                    <i class="bi bi-signpost-2 me-2"></i>Quận/Huyện *
                </label>
                <input asp-for="District" class="form-control" placeholder="Ví dụ: Quận 1" required />
            </div>

            <div class="mb-3">
                <label asp-for="Ward" class="form-label">
                    <i class="bi bi-signpost me-2"></i>Phường/Xã *
                </label>
                <input asp-for="Ward" class="form-control" placeholder="Ví dụ: Phường Bến Nghé" required />
            </div>

            <div class="mb-3">
                <label asp-for="Street" class="form-label">
                    <i class="bi bi-house-door me-2"></i>Địa chỉ cụ thể *
                </label>
                <input asp-for="Street" class="form-control" placeholder="Số nhà, tên đường" required />
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">
                    <i class="bi bi-telephone me-2"></i>Số điện thoại *
                </label>
                <input asp-for="Phone" type="tel" class="form-control" placeholder="Nhập số điện thoại" required />
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save me-2"></i>Lưu địa chỉ
                </button>
            </div>

            <div class="text-center">
                <a asp-page="/Account/Addresses/Index" class="text-muted">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách địa chỉ
                </a>
            </div>
        </form>
    </div>
</div>

