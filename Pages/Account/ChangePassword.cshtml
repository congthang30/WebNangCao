@page
@model NewWeb.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <h2><i class="bi bi-key me-2"></i>Đổi mật khẩu</h2>
            <p class="text-muted">Thay đổi mật khẩu đăng nhập của bạn</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.SuccessMessage))
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i>@Model.SuccessMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post" class="account-form">
            <div class="mb-3">
                <label asp-for="CurrentPassword" class="form-label">
                    <i class="bi bi-lock me-2"></i>Mật khẩu hiện tại *
                </label>
                <input asp-for="CurrentPassword" type="password" class="form-control" placeholder="Nhập mật khẩu hiện tại" required />
            </div>

            <div class="mb-3">
                <label asp-for="NewPassword" class="form-label">
                    <i class="bi bi-lock-fill me-2"></i>Mật khẩu mới *
                </label>
                <input asp-for="NewPassword" type="password" class="form-control" placeholder="Nhập mật khẩu mới (tối thiểu 8 ký tự)" required />
                <small class="text-muted">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa và chữ thường</small>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">
                    <i class="bi bi-shield-lock me-2"></i>Xác nhận mật khẩu mới *
                </label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" required />
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save me-2"></i>Đổi mật khẩu
                </button>
            </div>

            <div class="text-center">
                <a asp-page="/Index" class="text-muted">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại trang chủ
                </a>
            </div>
        </form>
    </div>
</div>

