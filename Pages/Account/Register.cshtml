@page
@model NewWeb.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Đăng ký";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <h2><i class="bi bi-person-plus me-2"></i>Đăng ký tài khoản</h2>
            <p class="text-muted">Tạo tài khoản mới để bắt đầu mua sắm</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post" class="account-form">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <i class="bi bi-person me-2"></i>Họ và tên
                </label>
                <input asp-for="Name" class="form-control" placeholder="Nhập họ và tên" required />
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">
                    <i class="bi bi-envelope me-2"></i>Email
                </label>
                <input asp-for="Email" type="email" class="form-control" placeholder="Nhập email" required />
            </div>

            <div class="mb-3">
                <label asp-for="Phone" class="form-label">
                    <i class="bi bi-telephone me-2"></i>Số điện thoại
                </label>
                <input asp-for="Phone" type="tel" class="form-control" placeholder="Nhập số điện thoại" required />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">
                    <i class="bi bi-lock me-2"></i>Mật khẩu
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu (tối thiểu 8 ký tự)" required />
                <small class="text-muted">Mật khẩu phải có ít nhất 8 ký tự, bao gồm chữ hoa và chữ thường</small>
            </div>

            <div class="mb-3">
                <label asp-for="RePassword" class="form-label">
                    <i class="bi bi-lock-fill me-2"></i>Nhập lại mật khẩu
                </label>
                <input asp-for="RePassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" required />
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-person-plus me-2"></i>Đăng ký
                </button>
            </div>

            <div class="text-center">
                <p class="mb-0">
                    Đã có tài khoản? 
                    <a asp-page="/Account/Login" class="fw-bold">Đăng nhập ngay</a>
                </p>
            </div>
        </form>
    </div>
</div>

