@page
@model NewWeb.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Đăng nhập";
}

<link rel="stylesheet" href="~/css/account.css" asp-append-version="true" />

<div class="account-container">
    <div class="account-card">
        <div class="account-header">
            <h2><i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập</h2>
            <p class="text-muted">Đăng nhập để tiếp tục mua sắm</p>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form method="post" class="account-form">
            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <i class="bi bi-person me-2"></i>Email hoặc số điện thoại
                </label>
                <input asp-for="Name" class="form-control" placeholder="Nhập email hoặc số điện thoại" required />
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">
                    <i class="bi bi-lock me-2"></i>Mật khẩu
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" required />
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                </button>
            </div>

            <div class="text-center mb-3">
                <span class="text-muted">hoặc</span>
            </div>

            <div class="d-grid gap-2 mb-3">
                <a asp-page="/Account/GoogleLogin" asp-page-handler="Login" class="btn btn-outline-danger btn-lg">
                    <i class="bi bi-google me-2"></i>Đăng nhập với Google
                </a>
            </div>

            <div class="text-center">
                <p class="mb-0">
                    Chưa có tài khoản? 
                    <a asp-page="/Account/Register" class="fw-bold">Đăng ký ngay</a>
                </p>
            </div>
        </form>
    </div>
</div>

