@page
@model NewWeb.Pages.Checkout.VerifyOtpModel
@{
    ViewData["Title"] = "Xác minh OTP";
}

<link rel="stylesheet" href="~/css/checkout.css" asp-append-version="true" />

<div class="verify-otp-container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="verify-card">
                <div class="text-center mb-4">
                    <i class="bi bi-shield-check verify-icon"></i>
                    <h2>Xác minh OTP</h2>
                    <p class="text-muted">Vui lòng nhập mã OTP đã được gửi đến email của bạn</p>
                </div>

                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="bi bi-exclamation-triangle me-2"></i>@Model.ErrorMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                @if (!string.IsNullOrEmpty(Model.InfoMessage))
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="bi bi-info-circle me-2"></i>@Model.InfoMessage
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form method="post">
                    <div class="mb-4">
                        <label for="inputOtp" class="form-label">
                            <i class="bi bi-key me-2"></i>Mã OTP (6 chữ số)
                        </label>
                        <input type="text" class="form-control form-control-lg text-center" 
                               id="inputOtp" name="inputOtp" 
                               placeholder="000000" maxlength="6" 
                               pattern="[0-9]{6}" required autofocus>
                        <small class="text-muted">Mã OTP có hiệu lực trong 5 phút</small>
                    </div>

                    <div class="d-grid gap-2 mb-3">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-circle me-2"></i>Xác nhận
                        </button>
                    </div>

                    <div class="text-center">
                        <form method="post" asp-page-handler="ResendOtp" class="d-inline">
                            <button type="submit" class="btn btn-link">
                                <i class="bi bi-arrow-clockwise me-1"></i>Gửi lại mã OTP
                            </button>
                        </form>
                    </div>
                </form>

                <div class="text-center mt-4">
                    <a asp-page="/Checkout/Index" class="text-muted">
                        <i class="bi bi-arrow-left me-1"></i>Quay lại trang thanh toán
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-focus và format OTP input
        document.getElementById('inputOtp').addEventListener('input', function(e) {
            this.value = this.value.replace(/[^0-9]/g, '');
        });
    </script>
}

