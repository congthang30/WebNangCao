@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ - TechStore";
    var vm = Model.ViewModel;
}

@* Link CSS riêng cho trang chủ *@
<link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />

@* Hero Section *@
@await Component.InvokeAsync("HeroSection")

@* Filter Section *@
<section class="filter-section">
    <h4 class="mb-4">
        <i class="bi bi-funnel me-2"></i>Bộ lọc sản phẩm
    </h4>
    <form method="get" asp-page="/Index">
        <div class="filter-row">
            <div class="form-group">
                <label class="form-label">
                    <i class="bi bi-grid me-1"></i>Danh mục
                </label>
                        <select name="cate" asp-for="Cate" class="form-select">
                            <option value="">Tất cả danh mục</option>
                            @foreach (var category in vm.Categories)
                            {
                                <option value="@category.CateId">@category.CategoryName</option>
                            }
                        </select>
            </div>
            
            <div class="form-group">
                <label class="form-label">
                    <i class="bi bi-tag me-1"></i>Thương hiệu
                </label>
                        <select name="brandId" asp-for="BrandId" class="form-select">
                            <option value="">Tất cả thương hiệu</option>
                            @foreach (var brand in vm.Brands)
                            {
                                <option value="@brand.BrandId">@brand.NameBrand</option>
                            }
                        </select>
            </div>
            
            <div class="form-group">
                <label class="form-label">
                    <i class="bi bi-currency-dollar me-1"></i>Giá từ
                </label>
                <input type="number" name="minPrice" asp-for="MinPrice" class="form-control" placeholder="0 ₫" />
            </div>
            
            <div class="form-group">
                <label class="form-label">
                    <i class="bi bi-currency-dollar me-1"></i>Giá đến
                </label>
                <input type="number" name="maxPrice" asp-for="MaxPrice" class="form-control" placeholder="100.000.000 ₫" />
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-primary w-100" style="padding: 0.65rem 1rem;">
                    <i class="bi bi-search me-2"></i>Áp dụng bộ lọc
                </button>
            </div>
        </div>
    </form>
</section>

@* Stats Section *@
@await Component.InvokeAsync("StatsSection")

@* Products Section *@
<section>
    <h2 class="section-title">✨ Sản phẩm nổi bật</h2>
    
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    
    @if (vm.Products != null && vm.Products.Any())
    {
        <div class="product-grid">
            @foreach (var product in vm.Products)
            {
                <div class="product-card-modern">
                    <a href="/Products/Detail?id=@product.ProductId" class="product-link">
                        <div class="product-image-container">
                            @if (!string.IsNullOrEmpty(product.ImagePr))
                            {
                                <img src="@product.ImagePr" alt="@product.ProductName" loading="lazy" 
                                     onerror="this.src='/images/no-image.svg';" />
                            }
                            else
                            {
                                <img src="/images/no-image.svg" alt="Không có ảnh" />
                            }
                            
                            @if (product.IsFeatured == true)
                            {
                                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">
                                    <i class="bi bi-star-fill"></i> Nổi bật
                                </span>
                            }
                            
                            @if (product.Discount > 0)
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                    -@((int)(product.Discount ?? 0))%
                                </span>
                            }
                        </div>
                        
                        <div class="product-info">
                            <h3 class="product-title">@product.ProductName</h3>
                            <p class="product-description">
                                @if (!string.IsNullOrEmpty(product.Description))
                                {
                                    @(product.Description.Length > 80 ? product.Description.Substring(0, 80) + "..." : product.Description)
                                }
                            </p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="product-price">
                                    @if (product.SellingPrice.HasValue)
                                    {
                                        <span>@product.SellingPrice.Value.ToString("N0") ₫</span>
                                    }
                                </div>
                                
                                @if (product.Quantity > 0 && product.Quantity <= 10)
                                {
                                    <small class="text-warning">
                                        <i class="bi bi-exclamation-triangle"></i> Còn @product.Quantity
                                    </small>
                                }
                                else if (product.Quantity > 10)
                                {
                                    <small class="text-success">
                                        <i class="bi bi-check-circle"></i> Còn hàng
                                    </small>
                                }
                            </div>
                        </div>
                    </a>
                    <!-- Wishlist Button -->
                    <button type="button" class="wishlist-btn" data-product-id="@product.ProductId" title="Thêm vào yêu thích">
                        <i class="bi bi-heart"></i>
                    </button>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="bi bi-inbox"></i>
            <h4 class="text-muted mb-2">Không tìm thấy sản phẩm nào</h4>
            <p class="text-muted">Hãy thử điều chỉnh bộ lọc hoặc tìm kiếm với từ khóa khác</p>
            <a asp-page="/Index" class="btn btn-primary mt-3">
                <i class="bi bi-arrow-clockwise me-2"></i>Xem tất cả sản phẩm
            </a>
        </div>
    }
</section>

@* Newsletter Section *@
@await Component.InvokeAsync("NewsletterSection")

@* Anti-forgery token for AJAX requests *@
@Html.AntiForgeryToken()

@section Scripts {
    <script src="~/js/home.js" asp-append-version="true"></script>
}
