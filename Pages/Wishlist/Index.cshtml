@page
@model NewWeb.Pages.Wishlist.IndexModel
@{
    ViewData["Title"] = "Danh sách yêu thích";
}

<link rel="stylesheet" href="~/css/wishlist.css" asp-append-version="true" />

<div class="wishlist-container">
    <div class="row">
        <div class="col-12">
            <h2 class="page-title">
                <i class="bi bi-heart-fill me-2"></i>Danh sách yêu thích của tôi
            </h2>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.WishlistProducts.Any())
    {
        <div class="empty-wishlist">
            <div class="empty-icon">
                <i class="bi bi-heart"></i>
            </div>
            <h3>Danh sách yêu thích của bạn đang trống</h3>
            <p class="text-muted">Hãy thêm các sản phẩm yêu thích vào danh sách!</p>
            <a asp-page="/Index" class="btn btn-primary btn-lg mt-3">
                <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
            </a>
        </div>
    }
    else
    {
        <div class="wishlist-grid">
            @foreach (var product in Model.WishlistProducts)
            {
                <div class="wishlist-item-card">
                    <div class="product-image-wrapper">
                        <a asp-page="/Products/Detail" asp-route-id="@product.ProductId">
                            @if (!string.IsNullOrEmpty(product.ImagePr))
                            {
                                <img src="@product.ImagePr" alt="@product.ProductName" 
                                     class="product-image" onerror="this.src='/images/no-image.svg';">
                            }
                            else
                            {
                                <img src="/images/no-image.svg" alt="No Image" class="product-image">
                            }
                        </a>
                        @if (product.IsFeatured == true)
                        {
                            <span class="badge-featured">
                                <i class="bi bi-star-fill"></i> Nổi bật
                            </span>
                        }
                        @if (product.Discount > 0)
                        {
                            <span class="badge-discount">
                                -@((int)(product.Discount ?? 0))%
                            </span>
                        }
                    </div>

                    <div class="product-info">
                        <h5 class="product-name">
                            <a asp-page="/Products/Detail" asp-route-id="@product.ProductId" class="text-decoration-none">
                                @product.ProductName
                            </a>
                        </h5>
                        <div class="product-meta">
                            <span class="brand-tag">
                                <i class="bi bi-tag me-1"></i>@product.Brand?.NameBrand
                            </span>
                            <span class="category-tag">
                                <i class="bi bi-grid me-1"></i>@product.Cate?.CategoryName
                            </span>
                        </div>
                        <div class="price-section">
                            @if (product.SellingPrice.HasValue)
                            {
                                <span class="current-price">@product.SellingPrice.Value.ToString("N0") ₫</span>
                            }
                        </div>
                        <div class="stock-status mb-3">
                            @if ((product.Quantity ?? 0) > 0)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle"></i> Còn hàng
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle"></i> Hết hàng
                                </span>
                            }
                        </div>
                        <div class="product-actions">
                            <form method="post" asp-page-handler="RemoveWishList" class="d-inline">
                                <input type="hidden" name="productId" value="@product.ProductId" />
                                <button type="submit" class="btn btn-outline-danger btn-sm w-100 mb-2">
                                    <i class="bi bi-heart-fill me-1"></i>Xóa khỏi yêu thích
                                </button>
                            </form>
                            @if ((product.Quantity ?? 0) > 0)
                            {
                                <form method="post" asp-page="/Cart/Index" asp-page-handler="AddToCart" class="d-inline w-100">
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-primary btn-sm w-100">
                                        <i class="bi bi-cart-plus me-1"></i>Thêm vào giỏ hàng
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
}

