@* Newsletter Section View Component *@
<section class="newsletter-section">
    <div class="row align-items-center">
        <div class="col-md-7 mb-3 mb-md-0">
            <h3 class="mb-2">
                <i class="bi bi-envelope-heart me-2"></i>Đăng ký nhận tin
            </h3>
            <p class="text-muted mb-0">Nhận thông tin về sản phẩm mới và ưu đãi đặc biệt</p>
        </div>
        <div class="col-md-5">
            <div class="input-group">
                <input type="email" class="form-control" placeholder="Email của bạn" 
                       style="border-radius: 8px 0 0 8px; padding: 0.75rem;">
                <button class="btn btn-primary" type="button" 
                        style="border-radius: 0 8px 8px 0; padding: 0.75rem 1.5rem;">
                    <i class="bi bi-send me-2"></i>Đăng ký
                </button>
            </div>
        </div>
    </div>
</section>

