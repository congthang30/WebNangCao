@page
@model NewWeb.Areas.NVKho.Pages.Import.ListWarehouseReceiptModel
@{
    ViewData["Title"] = "Danh sách phiếu nhập kho";
}

<div class="page-header">
    <h1>
        <i class="bi bi-box-arrow-down"></i>
        Danh sách phiếu nhập kho
    </h1>
    <p>Quản lý các phiếu nhập kho</p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Mã phiếu</th>
                    <th>Số phiếu</th>
                    <th>Nhà cung cấp</th>
                    <th>Nhân viên</th>
                    <th>Tổng số lượng</th>
                    <th>Tổng tiền</th>
                    <th>Ngày nhập</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.WarehouseReceipts.Any())
                {
                    @foreach (var receipt in Model.WarehouseReceipts)
                    {
                        <tr>
                            <td>#@receipt.ReceiptID</td>
                            <td>@receipt.ReceiptNumber</td>
                            <td>@receipt.SupplierName</td>
                            <td>@receipt.Staff?.FullName</td>
                            <td>@receipt.TotalQuantity</td>
                            <td>@receipt.TotalAmount.ToString("N0") VNĐ</td>
                            <td>@receipt.ReceiptDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-info" onclick="viewReceiptDetails(@receipt.ReceiptID)">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-center text-muted">Không có phiếu nhập kho nào</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Receipt Details -->
<div class="modal fade" id="receiptDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết phiếu nhập kho</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="receiptDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewReceiptDetails(receiptId) {
            $('#receiptDetailsModal').modal('show');
            $('#receiptDetailsContent').html('<div class="text-center"><div class="spinner-border"></div></div>');

            fetch('?handler=ReceiptDetails&receiptId=' + receiptId)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        var receipt = data.data;
                        var html = `
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h6>Thông tin phiếu</h6>
                                    <p><strong>Mã phiếu:</strong> #${receipt.receiptId}</p>
                                    <p><strong>Số phiếu:</strong> ${receipt.receiptNumber || 'N/A'}</p>
                                    <p><strong>Ngày nhập:</strong> ${receipt.receiptDate || 'N/A'}</p>
                                    <p><strong>Nhân viên:</strong> ${receipt.staffName || 'N/A'}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6>Thông tin nhà cung cấp</h6>
                                    <p><strong>Tên:</strong> ${receipt.supplierName || 'N/A'}</p>
                                    <p><strong>Tổng số lượng:</strong> ${receipt.receiptDetails.reduce((sum, d) => sum + (d.quantity || 0), 0)}</p>
                                    <p><strong>Tổng tiền:</strong> ${receipt.totalAmount} VNĐ</p>
                                    <p><strong>Ghi chú:</strong> ${receipt.notes || 'Không có'}</p>
                                </div>
                            </div>
                            <hr>
                            <h6>Chi tiết sản phẩm</h6>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Barcode</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>`;

                        receipt.receiptDetails.forEach(detail => {
                            html += `
                                <tr>
                                    <td>${detail.productName || 'N/A'}</td>
                                    <td>${detail.barcode || 'N/A'}</td>
                                    <td>${detail.quantity || 0}</td>
                                    <td>${detail.unitPrice} VNĐ</td>
                                    <td>${detail.totalPrice} VNĐ</td>
                                </tr>`;
                        });

                        html += `
                                </tbody>
                            </table>`;

                        $('#receiptDetailsContent').html(html);
                    } else {
                        $('#receiptDetailsContent').html('<div class="alert alert-danger">' + data.message + '</div>');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    $('#receiptDetailsContent').html('<div class="alert alert-danger">Có lỗi xảy ra khi tải chi tiết phiếu nhập kho</div>');
                });
        }
    </script>
}

