@page
@model NewWeb.Areas.NVKho.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard NVKho";
}

<div class="page-header">
    <h1>
        <i class="bi bi-speedometer2"></i>
        Dashboard NVKho
    </h1>
    <p>Quản lý kho và xuất nhập hàng</p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<!-- Top Row - Today Statistics -->
<div class="row mb-4">
    <div class="col-md-6 mb-3">
        <div class="stat-card warning">
            <div class="stat-card-header">
                <div class="stat-card-title">ĐƠN CHỜ XỬ LÝ HÔM NAY</div>
                <div class="stat-card-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.PendingOrdersToday</p>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="stat-card success">
            <div class="stat-card-header">
                <div class="stat-card-title">ĐƠN ĐÃ XỬ LÝ HÔM NAY</div>
                <div class="stat-card-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.ProcessedOrdersToday</p>
        </div>
    </div>
</div>

<!-- Middle Row - Monthly Statistics -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="stat-card warning">
            <div class="stat-card-header">
                <div class="stat-card-title">ĐƠN CHỜ XỬ LÝ (THÁNG NÀY)</div>
                <div class="stat-card-icon">
                    <i class="bi bi-clock-history"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.PendingOrdersThisMonth</p>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stat-card success">
            <div class="stat-card-header">
                <div class="stat-card-title">ĐƠN ĐÃ XỬ LÝ (THÁNG NÀY)</div>
                <div class="stat-card-icon">
                    <i class="bi bi-check-circle"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.ProcessedOrdersThisMonth</p>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="stat-card info">
            <div class="stat-card-header">
                <div class="stat-card-title">DOANH THU (THÁNG NÀY)</div>
                <div class="stat-card-icon">
                    <i class="bi bi-currency-dollar"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.TotalRevenueThisMonth.ToString("N0") VNĐ</p>
        </div>
    </div>
</div>

<!-- Recent Orders and Low Stock -->
<div class="row">
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Đơn hàng chờ xử lý</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Mã đơn</th>
                            <th>Khách hàng</th>
                            <th>Ngày tạo</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentPendingOrders.Any())
                        {
                            @foreach (var order in Model.RecentPendingOrders)
                            {
                                <tr>
                                    <td>#@order.OrderId</td>
                                    <td>@order.User?.FullName</td>
                                    <td>@order.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td>
                                        <a asp-page="/NVKho/Export/ListOrderConfirm" class="btn btn-sm btn-warning">
                                            <i class="bi bi-eye"></i> Xem
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">Không có đơn hàng chờ xử lý</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6 mb-3">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Sản phẩm sắp hết hàng</h5>
            </div>
            <div class="card-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LowStockProducts.Any())
                        {
                            @foreach (var product in Model.LowStockProducts)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>
                                        <span class="badge bg-danger">@(product.Quantity ?? 0)</span>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">Không có sản phẩm sắp hết hàng</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

