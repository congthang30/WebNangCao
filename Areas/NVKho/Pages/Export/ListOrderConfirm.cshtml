@page
@model NewWeb.Areas.NVKho.Pages.Export.ListOrderConfirmModel
@{
    ViewData["Title"] = "Danh sách đơn cần xuất kho";
}

<div class="page-header">
    <h1>
        <i class="bi bi-box-arrow-up"></i>
        Danh sách đơn cần xuất kho
    </h1>
    <p>Đơn hàng đã xác nhận cần chuẩn bị xuất kho</p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<div class="card">
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Mã đơn</th>
                    <th>Khách hàng</th>
                    <th>Số lượng SP</th>
                    <th>Tổng tiền</th>
                    <th>Ngày tạo</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Orders.Any())
                {
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>#@order.OrderId</td>
                            <td>@order.User?.FullName</td>
                            <td>@order.OrderDetails.Count</td>
                            <td>@((order.TotalAmount ?? 0).ToString("N0")) VNĐ</td>
                            <td>@order.CreatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <button type="button" class="btn btn-sm btn-info" onclick="viewOrderDetails(@order.OrderId)">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </button>
                                <button type="button" class="btn btn-sm btn-success" onclick="makeInvoiceWarehouse(@order.OrderId, this)">
                                    <i class="bi bi-receipt"></i> Tạo phiếu xuất kho
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted">Không có đơn hàng nào cần xuất kho</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Order Details -->
<div class="modal fade" id="orderDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Chi tiết đơn hàng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="orderDetailsContent">
                <div class="text-center">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.AntiForgeryToken()

@section Scripts {
    <script>
        function viewOrderDetails(orderId) {
            $('#orderDetailsModal').modal('show');
            $('#orderDetailsContent').html('<div class="text-center"><div class="spinner-border"></div></div>');

            fetch('?handler=OrderDetails&orderId=' + orderId)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        var order = data.data;
                        var html = `
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <h6>Thông tin khách hàng</h6>
                                    <p><strong>Tên:</strong> ${order.customerName || 'N/A'}</p>
                                    <p><strong>SĐT:</strong> ${order.customerPhone || 'N/A'}</p>
                                    <p><strong>Email:</strong> ${order.customerEmail || 'N/A'}</p>
                                    <p><strong>Địa chỉ:</strong> ${order.address || 'N/A'}</p>
                                </div>
                                <div class="col-md-6">
                                    <h6>Thông tin đơn hàng</h6>
                                    <p><strong>Mã đơn:</strong> #${order.orderId}</p>
                                    <p><strong>Ngày tạo:</strong> ${order.createdAt || 'N/A'}</p>
                                    <p><strong>Trạng thái:</strong> ${order.status || 'N/A'}</p>
                                    <p><strong>Thanh toán:</strong> ${order.paymentMethod || 'N/A'}</p>
                                </div>
                            </div>
                            <hr>
                            <h6>Chi tiết sản phẩm</h6>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th>Thương hiệu</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>`;

                        order.orderDetails.forEach(detail => {
                            html += `
                                <tr>
                                    <td>${detail.productName || 'N/A'}</td>
                                    <td>${detail.brandName || 'N/A'}</td>
                                    <td>${detail.quantity || 0}</td>
                                    <td>${(detail.unitPrice || 0).toLocaleString('vi-VN')} VNĐ</td>
                                    <td>${(detail.totalPrice || 0).toLocaleString('vi-VN')} VNĐ</td>
                                </tr>`;
                        });

                        html += `
                                </tbody>
                            </table>
                            <hr>
                            <div class="text-end">
                                <p><strong>Tổng tiền:</strong> ${(order.totalAmount || 0).toLocaleString('vi-VN')} VNĐ</p>
                                ${order.voucher ? `<p><strong>Giảm giá:</strong> ${(order.voucher.discountAmount || 0).toLocaleString('vi-VN')} VNĐ</p>` : ''}
                                <p><strong>Thành tiền:</strong> ${(order.finalTotal || 0).toLocaleString('vi-VN')} VNĐ</p>
                            </div>`;

                        $('#orderDetailsContent').html(html);
                    } else {
                        $('#orderDetailsContent').html('<div class="alert alert-danger">' + data.message + '</div>');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    $('#orderDetailsContent').html('<div class="alert alert-danger">Có lỗi xảy ra khi tải chi tiết đơn hàng</div>');
                });
        }

        function makeInvoiceWarehouse(orderId, buttonElement) {
            if (!confirm('Bạn có chắc chắn muốn tạo phiếu xuất kho cho đơn hàng #' + orderId + '?')) {
                return;
            }

            // Disable button để tránh double click
            const button = buttonElement || document.querySelector('button[onclick*="makeInvoiceWarehouse(' + orderId + '"]');
            const originalText = button.innerHTML;
            button.disabled = true;
            button.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang xử lý...';

            // Lấy antiforgery token
            const token = document.querySelector('input[name="__RequestVerificationToken"]')?.value || '';

            // Sử dụng FormData để gửi request
            const formData = new FormData();
            formData.append('orderId', orderId);
            if (token) {
                formData.append('__RequestVerificationToken', token);
            }

            fetch('?handler=MakeInvoiceWarehouse', {
                method: 'POST',
                body: formData,
                headers: {
                    'RequestVerificationToken': token
                }
            })
            .then(response => {
                if (!response.ok) {
                    // Đọc response để lấy thông tin lỗi chi tiết
                    return response.text().then(text => {
                        try {
                            const json = JSON.parse(text);
                            throw new Error(json.message || 'HTTP error! status: ' + response.status);
                        } catch (e) {
                            throw new Error('HTTP error! status: ' + response.status + ' - ' + text.substring(0, 100));
                        }
                    });
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    window.location.reload();
                } else {
                    alert('Lỗi: ' + data.message);
                    button.disabled = false;
                    button.innerHTML = originalText;
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi tạo phiếu xuất kho: ' + error.message);
                button.disabled = false;
                button.innerHTML = originalText;
            });
        }
    </script>
}

