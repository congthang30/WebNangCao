<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NVKD EasyBuy</title>
    
    <!-- Bootstrap 5 CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f5f5f5;
        }

        /* Sidebar */
        .nvkd-sidebar {
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            width: 280px;
            background: linear-gradient(180deg, #fff 0%, #f8f9fa 100%);
            box-shadow: 2px 0 10px rgba(0,0,0,0.1);
            z-index: 1000;
            display: flex;
            flex-direction: column;
        }

        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e9ecef;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .sidebar-logo {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .sidebar-title {
            flex: 1;
        }

        .sidebar-title h4 {
            color: #28a745;
            font-weight: 600;
            margin: 0;
            font-size: 1.1rem;
        }

        .sidebar-title p {
            color: #6c757d;
            font-size: 0.85rem;
            margin: 0;
        }

        .sidebar-menu {
            flex: 1;
            padding: 1rem 0;
            overflow-y: auto;
        }

        .menu-item {
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            color: #495057;
            text-decoration: none;
            transition: all 0.3s ease;
            border-left: 3px solid transparent;
        }

        .menu-item:hover {
            background-color: #f8f9fa;
            color: #28a745;
        }

        .menu-item.active {
            background-color: #f0fff4;
            color: #28a745;
            border-left-color: #28a745;
        }

        .menu-item i {
            font-size: 1.2rem;
            width: 24px;
        }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid #e9ecef;
        }

        .user-info {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1rem;
            color: #495057;
        }

        .user-info i {
            color: #28a745;
            font-size: 1.2rem;
        }

        .logout-btn {
            width: 100%;
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            border: none;
            padding: 0.75rem;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .logout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(40, 167, 69, 0.3);
        }

        /* Main Content */
        .nvkd-main {
            margin-left: 280px;
            min-height: 100vh;
            padding: 2rem;
        }

        .page-header {
            margin-bottom: 2rem;
        }

        .page-header h1 {
            color: #28a745;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
        }

        .page-header h1 i {
            font-size: 2rem;
        }

        .page-header p {
            color: #6c757d;
            margin: 0;
        }

        /* Stat Cards */
        .stat-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            border-top: 4px solid;
            transition: all 0.3s ease;
            height: 100%;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 16px rgba(0,0,0,0.15);
        }

        .stat-card.success { border-top-color: #28a745; }
        .stat-card.info { border-top-color: #17a2b8; }
        .stat-card.warning { border-top-color: #ffc107; }

        .stat-card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

        .stat-card-title {
            font-size: 0.85rem;
            font-weight: 600;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .stat-card-icon {
            width: 48px;
            height: 48px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
            color: #6c757d;
            font-size: 1.5rem;
        }

        .stat-card-value {
            font-size: 2rem;
            font-weight: 700;
            color: #212529;
            margin: 0;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="nvkd-sidebar">
        <div class="sidebar-header">
            <div class="sidebar-logo">
                <i class="bi bi-bag-check"></i>
            </div>
            <div class="sidebar-title">
                <h4>NVKD EasyBuy</h4>
                <p>Quản lý đơn hàng</p>
            </div>
        </div>

        <nav class="sidebar-menu">
            @{
                var currentPage = ViewContext.RouteData.Values["page"]?.ToString() ?? "";
                var isDashboard = currentPage == "/NVKD/Index" || currentPage == "/NVKD";
                var isOrders = currentPage.Contains("/NVKD/Orders");
                var isInvoices = currentPage.Contains("/NVKD/Invoices");
            }
            <a asp-area="NVKD" asp-page="/Index" class="menu-item @(isDashboard ? "active" : "")">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
            <a asp-area="NVKD" asp-page="/Orders/ListOrderNew" class="menu-item @(isOrders && currentPage.Contains("New") ? "active" : "")">
                <i class="bi bi-cart-plus"></i>
                <span>Đơn hàng mới</span>
            </a>
            <a asp-area="NVKD" asp-page="/Orders/ListOrderConfirmed" class="menu-item @(isOrders && currentPage.Contains("Confirmed") ? "active" : "")">
                <i class="bi bi-check-circle"></i>
                <span>Đơn đã xác nhận</span>
            </a>
            <a asp-area="NVKD" asp-page="/Invoices/ListInvoice" class="menu-item @(isInvoices ? "active" : "")">
                <i class="bi bi-receipt"></i>
                <span>Hóa đơn</span>
            </a>
        </nav>

        <div class="sidebar-footer">
            @{
                var userId = Context.Session.GetInt32("UserID");
                var userPhone = Context.Session.GetString("Phone") ?? "N/A";
            }
            <div class="user-info">
                <i class="bi bi-person-circle"></i>
                <span>@userPhone</span>
            </div>
            <form method="post" asp-page="/Account/Login" asp-page-handler="Logout">
                <button type="submit" class="logout-btn">
                    <span>Đăng xuất</span>
                    <i class="bi bi-arrow-right"></i>
                </button>
            </form>
        </div>
    </div>

    <!-- Main Content -->
    <main class="nvkd-main">
        @RenderBody()
    </main>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

