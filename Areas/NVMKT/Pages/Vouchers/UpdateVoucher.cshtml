@page "{id:int}"
@model NewWeb.Areas.NVMKT.Pages.Vouchers.UpdateVoucherModel
@{
    ViewData["Title"] = "Cập nhật voucher";
}

<div class="page-header">
    <h1>
        <i class="bi bi-pencil"></i>
        Cập nhật voucher
    </h1>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<form method="post" class="card">
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="Code" class="form-label">Mã voucher *</label>
                    <input asp-for="Code" class="form-control" value="@Model.Voucher.Code" required />
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="DiscountType" class="form-label">Loại giảm giá</label>
                    <select asp-for="DiscountType" class="form-select">
                        <option value="">-- Chọn loại --</option>
                        <option value="percentage">Phần trăm (%)</option>
                        <option value="fixed">Cố định (VNĐ)</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="3">@Model.Voucher.Description</textarea>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="DiscountValue" class="form-label">Giá trị giảm giá *</label>
                    <input asp-for="DiscountValue" type="number" step="0.01" class="form-control" value="@Model.Voucher.DiscountValue" min="0" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="MaxDiscountAmount" class="form-label">Giảm tối đa (VNĐ)</label>
                    <input asp-for="MaxDiscountAmount" type="number" step="0.01" class="form-control" value="@Model.Voucher.MaxDiscountAmount" min="0" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="MinOrderAmount" class="form-label">Đơn tối thiểu (VNĐ)</label>
                    <input asp-for="MinOrderAmount" type="number" step="0.01" class="form-control" value="@Model.Voucher.MinOrderAmount" min="0" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Số lượng</label>
                    <input asp-for="Quantity" type="number" class="form-control" value="@Model.Voucher.Quantity" min="0" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="StartDate" class="form-label">Ngày bắt đầu</label>
                    <input asp-for="StartDate" type="date" class="form-control" value="@(Model.Voucher.StartDate?.ToString("yyyy-MM-dd"))" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <label asp-for="EndDate" class="form-label">Ngày kết thúc</label>
                    <input asp-for="EndDate" type="date" class="form-control" value="@(Model.Voucher.EndDate?.ToString("yyyy-MM-dd"))" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="IsActive" class="form-label">Đang hoạt động</label>
                    <div class="form-check form-switch">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" checked="@Model.Voucher.IsActive" />
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label asp-for="IsPublic" class="form-label">Công khai</label>
                    <div class="form-check form-switch">
                        <input asp-for="IsPublic" class="form-check-input" type="checkbox" checked="@Model.Voucher.IsPublic" />
                    </div>
                </div>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="CreatedBy" class="form-label">Người tạo</label>
            <input asp-for="CreatedBy" class="form-control" value="@Model.Voucher.CreatedBy" />
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Cập nhật
            </button>
            <a asp-page="ListVouchers" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Hủy
            </a>
        </div>
    </div>
</form>

