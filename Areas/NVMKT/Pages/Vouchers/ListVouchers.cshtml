@page
@model NewWeb.Areas.NVMKT.Pages.Vouchers.ListVouchersModel
@{
    ViewData["Title"] = "Danh sách voucher";
}

<div class="page-header">
    <h1>
        <i class="bi bi-ticket-perforated"></i>
        Danh sách voucher
    </h1>
    <p>Quản lý mã giảm giá</p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

<!-- Filter Form -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0"><i class="bi bi-funnel"></i> Bộ lọc tìm kiếm</h5>
    </div>
    <div class="card-body">
        <form method="get">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label class="form-label">Mã voucher</label>
                    <input asp-for="Code" class="form-control" />
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Loại giảm giá</label>
                    <select asp-for="DiscountType" class="form-select">
                        <option value="">-- Tất cả --</option>
                        <option value="percentage">Phần trăm</option>
                        <option value="fixed">Cố định</option>
                    </select>
                </div>
                <div class="col-md-4 mb-3">
                    <label class="form-label">Trạng thái</label>
                    <select asp-for="IsActive" class="form-select">
                        <option value="">-- Tất cả --</option>
                        <option value="true">Đang hoạt động</option>
                        <option value="false">Đã ẩn</option>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search"></i> Tìm kiếm
                    </button>
                    <a asp-page="ListVouchers" class="btn btn-secondary">Làm mới</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Bảng voucher -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Danh sách voucher</h5>
        <a asp-page="CreateVoucher" class="btn btn-primary btn-sm">
            <i class="bi bi-plus-circle"></i> Thêm voucher mới
        </a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Mã voucher</th>
                        <th>Mô tả</th>
                        <th>Loại giảm giá</th>
                        <th>Giá trị</th>
                        <th>Số lượng</th>
                        <th>Ngày bắt đầu</th>
                        <th>Ngày kết thúc</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Vouchers.Any())
                    {
                        @foreach (var voucher in Model.Vouchers)
                        {
                            <tr>
                                <td>@voucher.VoucherId</td>
                                <td><strong>@voucher.Code</strong></td>
                                <td>@(voucher.Description ?? "N/A")</td>
                                <td>
                                    <span class="badge bg-info">@(voucher.DiscountType ?? "N/A")</span>
                                </td>
                                <td>@((voucher.DiscountValue ?? 0).ToString("N0"))</td>
                                <td>@(voucher.Quantity ?? 0)</td>
                                <td>@(voucher.StartDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>@(voucher.EndDate?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                                <td>
                                    <span class="badge @((voucher.IsActive ?? false) ? "bg-success" : "bg-secondary")">
                                        @((voucher.IsActive ?? false) ? "Hoạt động" : "Ẩn")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-page="UpdateVoucher" asp-route-id="@voucher.VoucherId" class="btn btn-sm btn-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm btn-info" onclick="toggleStatus(@voucher.VoucherId)">
                                            <i class="bi bi-toggle-on"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center text-muted">Không tìm thấy voucher nào</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function toggleStatus(voucherId) {
            if (!confirm('Bạn có chắc chắn muốn thay đổi trạng thái voucher này?')) {
                return;
            }

            fetch('?handler=ToggleStatus&id=' + voucherId, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    alert(data.message);
                    window.location.reload();
                } else {
                    alert('Lỗi: ' + data.message);
                }
            })
            .catch(error => {
                console.error('Error:', error);
                alert('Có lỗi xảy ra khi thay đổi trạng thái');
            });
        }
    </script>
}

