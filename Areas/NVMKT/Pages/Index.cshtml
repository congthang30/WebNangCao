@page
@model NewWeb.Areas.NVMKT.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard NVMKT";
}

<div class="page-header">
    <h1>
        <i class="bi bi-speedometer2"></i>
        Dashboard NVMKT
    </h1>
    <p>Quản lý marketing và sản phẩm</p>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}

<!-- Statistics Cards -->
<div class="row mb-4">
    <div class="col-md-3 mb-3">
        <div class="stat-card purple">
            <div class="stat-card-header">
                <div class="stat-card-title">TỔNG SẢN PHẨM</div>
                <div class="stat-card-icon">
                    <i class="bi bi-box-seam"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.TotalProducts</p>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="stat-card success">
            <div class="stat-card-header">
                <div class="stat-card-title">SẢN PHẨM NỔI BẬT</div>
                <div class="stat-card-icon">
                    <i class="bi bi-star-fill"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.FeaturedProducts</p>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="stat-card danger">
            <div class="stat-card-header">
                <div class="stat-card-title">HẾT HÀNG</div>
                <div class="stat-card-icon">
                    <i class="bi bi-x-circle"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.OutOfStockProducts</p>
        </div>
    </div>
    <div class="col-md-3 mb-3">
        <div class="stat-card warning">
            <div class="stat-card-header">
                <div class="stat-card-title">SẮP HẾT HÀNG</div>
                <div class="stat-card-icon">
                    <i class="bi bi-exclamation-triangle"></i>
                </div>
            </div>
            <p class="stat-card-value">@Model.LowStockProducts</p>
        </div>
    </div>
</div>

<!-- Top Products and Low Stock -->
<div class="row mb-4">
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-header bg-purple text-white">
                <h5 class="mb-0"><i class="bi bi-eye me-2"></i>Sản phẩm xem nhiều nhất</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Lượt xem</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.TopViewedProducts.Any())
                        {
                            @foreach (var product in Model.TopViewedProducts)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td><span class="badge bg-info">@(product.ViewCount ?? 0)</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">Không có dữ liệu</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="bi bi-star-fill me-2"></i>Sản phẩm nổi bật</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.FeaturedProductsList.Any())
                        {
                            @foreach (var product in Model.FeaturedProductsList)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td>@((product.SellingPrice ?? 0).ToString("N0")) VNĐ</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">Không có sản phẩm nổi bật</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-3">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Sản phẩm sắp hết hàng</h5>
            </div>
            <div class="card-body">
                <table class="table table-sm table-hover">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Số lượng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.LowStockProductsList.Any())
                        {
                            @foreach (var product in Model.LowStockProductsList)
                            {
                                <tr>
                                    <td>@product.ProductName</td>
                                    <td><span class="badge bg-danger">@(product.Quantity ?? 0)</span></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="2" class="text-center text-muted">Không có sản phẩm sắp hết hàng</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-purple {
        background-color: #9c27b0 !important;
    }
</style>

